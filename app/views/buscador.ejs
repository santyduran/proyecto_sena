            </li>
            <% }) %>
        </ul>
        </section>

        <!-- Actividades -->
        <section>
        <h3><i class="fas fa-hiking"></i> Actividades</h3>
        <ul id="listaActividades">
            <% actividades.forEach(act => { %>
